{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 80,
		"indentStyle": "tab",
		"ignore": ["package-lock.json"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"trailingCommas": "all",
			"indentStyle": "tab",
			"quoteStyle": "double",
			"indentWidth": 2,
			"lineWidth": 80
		},
		"linter": {
			"enabled": true
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none",
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 4,
			"lineWidth": 80
		},
		"linter": {
			"enabled": true
		}
	},
	"css": {
		"formatter": {
			"enabled": true,
			"indentStyle": "tab",
			"indentWidth": 4,
			"quoteStyle": "double",
			"lineWidth": 80
		},
		"linter": {
			"enabled": true
		}
	}
}
